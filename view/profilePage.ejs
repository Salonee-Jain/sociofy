<!-- views/profile.ejs -->

<!DOCTYPE html>
<html>

<head>
    <title>User Profile</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css">
    <style>
        .profile-photo {
            width: 100%;
            max-width: 200px;
            height: auto;
            display: block;
            margin: 0 auto;
        }
    </style>
</head>

<body>
    <div class="container">
        <h1 class="my-4">User Profile</h1>
        <div class="row">
            <div class="col-md-3">
                <img src="https://statinfer.com/wp-content/uploads/dummy-user.png" alt="User Profile Photo"
                    class="img-thumbnail profile-photo">
            </div>
            <div class="col-md-9">
                <h2>
                    <h4>
                        <%= user.name %>
                    </h4>
                </h2>
                <p>
                <h4>
                    <%= user.email %>
                </h4>
                </p>
            </div>
        </div>
    </div>
</body>

</html>